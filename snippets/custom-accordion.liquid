<script>
const items = document.querySelectorAll(".openContent");
  const openedItems = JSON.parse(sessionStorage.getItem("openedItems")) || [];

  function toggleAccordion() {
    const isOpen = this.classList.toggle('active');
    this.nextElementSibling.classList.toggle('active');

    // Save state to local storage
    const index = parseInt(this.dataset.index);
    if (isOpen) {
      openedItems.push(index);
    } else {
      const indexToRemove = openedItems.indexOf(index);
      openedItems.splice(indexToRemove, 1);
    }
    sessionStorage.setItem("openedItems", JSON.stringify(openedItems));
  }

  items.forEach((item, index) => {
    item.dataset.index = index;
    item.addEventListener('click', toggleAccordion);

    // Restore state from local storage
    if (openedItems.includes(index)) {
      item.classList.add('active');
      item.nextElementSibling.classList.add('active');
    }
  });

